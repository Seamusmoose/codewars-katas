
function oddOrEven(array) {
  if (array.length === 0) {
  return 'even' 
  } else {

    
  let sum = array.reduce((a,b) => a + b, 0)
  if (sum % 2 === 0) {
    return 'even';
} else {
return 'odd'
}
}
  }


oddOrEven([0, 1, 5])




